VALUES(7,'MUFFY',24,'INDORE',10000.0);

/*DISPLAY TABLE CONTENTS*/
SELECT * FROM CUSTOMERS;

/* Create a table called ORDERS */


CREATE TABLE ORDERS(
OID INT NOT NULL,
DATES DATE NOT NULL,
CUSTOMER_ID INT ,
AMOUNT INT NOT NULL,
PRIMARY KEY (OID));

/*INSERT VALUES INTO TABLE*/

INSERT INTO ORDERS(OID,DATES,CUSTOMER_ID,AMOUNT)
VALUES(102,'2009-10-08' ,3,3000);
INSERT INTO ORDERS(OID,DATES,CUSTOMER_ID,AMOUNT)
VALUES(100,'2009-10-08' ,3,1500);
INSERT INTO ORDERS(OID,DATES,CUSTOMER_ID,AMOUNT)
VALUES(101,'2009-11-20' ,2,1560);
INSERT INTO ORDERS(OID,DATES,CUSTOMER_ID,AMOUNT)
VALUES(103,'2008-05-20' ,4,2060);

/*DISPLAY TABLE CONTENTS*/

SELECT * FROM ORDERS;

/*INNERJOIN COMPARES ALL THE ROWS AND SHOWS MATCHING ROWS*/
SELECT ID,NAME,AMOUNT,DATES
FROM CUSTOMERS
INNER JOIN ORDERS
ON CUSTOMERS.ID = ORDERS.CUSTOMER_ID;

/*LEFTJOIN RETURNS ALL THE ROWS FROM THE LEFT TABLE AND MATCHED VALUES OF LEFT TABLE*/
SELECT ID,NAME,AMOUNT,DATES
FROM CUSTOMERS LEFT JOIN ORDERS 
ON CUSTOMERS.ID = ORDERS.CUSTOMER_ID;

/*RETURNS ALL FROM RIGHT AND MATCHED FROM LEFT*/
SELECT ID,NAME,AMOUNT,DATES
FROM CUSTOMERS RIGHT JOIN ORDERS 
ON CUSTOMERS.ID = ORDERS.CUSTOMER_ID;

/*alter table*/

/*add column*/
ALTER TABLE CUSTOMERS ADD SEX CHAR(1);
/*DROP COLUMN*/
ALTER TABLE CUSTOMERS DROP COLUMN SEX;

PRAGMA table_info(CUSTOMERS);
SELECT * FROM CUSTOMERS;

DELETE FROM CUSTOMERS WHERE AGE > 25;
COMMIT;
SELECT * FROM CUSTOMERS;
