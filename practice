VALUES(4,'CHAITALI',25,'MUMBAI',6500.0);
INSERT INTO CUSTOMERS(ID, NAME , AGE, ADDRESS, SALARY)
VALUES(5,'HARDIK',27,'BHOPAL',8500.0);
INSERT INTO CUSTOMERS(ID, NAME , AGE, ADDRESS, SALARY)
VALUES(6,'KOMAL',22,'MP',4500.0);
